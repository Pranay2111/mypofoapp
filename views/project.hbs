<main role="main">
    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row">
                {{#each Projects}}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img class="card-img-top" src="/image/image1.jpg" alt="">
                        <div class="card-body">
                            <p class="card-text">
                                <h6><strong>{{this.name}}</strong></h6>{{this.description}}
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/project/{{this.alias}}"
                                        class="btn btn-sm btn-outline-secondary">Details</a>
                                    <a href="#" class="btn btn-sm btn-outline-secondary">Github</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>

</main>